{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": []
  },
  "include": ["scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "frontend",
    "supabase",
    "native",
    "dist",
    "build"
  ]
}

