{
  "name": "merge-props",
  "version": "6.0.0",
  "description": "Merges className, style, and DOM event handlers for React elements",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc -p .",
    "prepare": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewbranch/merge-props.git"
  },
  "keywords": [
    "React",
    "merge",
    "props"
  ],
  "author": "Andrew Branch <andrew@wheream.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewbranch/merge-props/issues"
  },
  "homepage": "https://github.com/andrewbranch/merge-props#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/",
      "/node_modules/"
    ]
  }
}
